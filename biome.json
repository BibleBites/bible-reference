{
    "$schema": "https://biomejs.dev/schemas/2.4.1/schema.json",
    "files": {
        "includes": ["**", "!**/dist", "!**/node_modules"]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "assist": {
        "enabled": true,
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    }
}
